@model IEnumerable<Dapper_Project.Models.ProductModel>


@{
    ViewBag.Title = "Index";
}

<h2>PRODUCT LIST</h2>

<p>
    @Html.ActionLink("ADD PRODUCT", "AddOrEdit", "Product")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Create_dateTime)
        </th>
        <th>
            Actions
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Create_dateTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "AddOrEdit", new {  id=item.Product_id }) |

            @Html.ActionLink("Delete", "Delete", new {  id= item.Product_id })
        </td>
    </tr>
}

</table>
